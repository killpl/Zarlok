@model IEnumerable<Testt.Models.Category>

@{
    ViewBag.Title = "Wszystkie kategorie";
}

<h2>Wszystkie kategorie</h2>

<p>
    @Html.ActionLink("Dodaj nową kategorię", "CreateCategory")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.ActionLink("Edytuj", "EditCategory", new { id=item.id }) |
            @Html.ActionLink("Usuń", "DeleteCategory", new { id=item.id })
        </td>
    </tr>
}

</table>
