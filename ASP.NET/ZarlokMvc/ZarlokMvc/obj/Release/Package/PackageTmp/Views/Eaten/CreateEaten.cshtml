@model ZarlokMvc.ViewModels.EatenViewModel

@{
    ViewBag.Title = "Dodaj nowe jedzenie";
}

<h2>Dodaj nowe jedzenie</h2>
<br />
@using (Html.BeginForm("CreateEaten", "Eaten", FormMethod.Post, new { enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <fieldset>
            <table><tr><td>
                <div class="editor-label">@Html.LabelFor(model => model.foodId) </div>
            </td>
             <td>
                <div class="editor-field">
                    <div class="dropdownlist">
                        @Html.DropDownListFor(model => model.foodId, new SelectList(ViewBag.Foods, "id", "name", Model == null ? 0 : Model.id), new {@class="form-control col-xs-4"})  
                    </div>
                </div>
            </td></tr></table>
            <br />
            <p><input type="submit" value="Dodaj" class="btn btn-info" /> 
                 @Html.ActionLink("Powrót", "Index") <span class="glyphicon glyphicon-share-alt"></span></p>
        </fieldset>
}
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
