@model IEnumerable<ZarlokMvc.Models.Achievement>

@{
    ViewBag.Title = "Wszystkie osiągnięcia";
}

<h2>Wszystkie kategorie</h2>

<p>
    @Html.ActionLink("Dodaj nowe osiągnięcie", "CreateAchievement")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.ActionLink("Edytuj", "EditAchievement", new { id=item.id }) |
            @Html.ActionLink("Usuń", "DeleteAchievement", new { id=item.id })
        </td>
    </tr>
}

</table>
