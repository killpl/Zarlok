@model IEnumerable<ZarlokMvc.ViewModels.FriendsListViewModel>

@{
    ViewBag.Title = "Lista znajomych";
}
<h2>Lista znajomych</h2>
<h3>@Html.ActionLink("Szukaj znajomych", "Index", "Profile")</h3><br />
@if(!String.IsNullOrEmpty(ViewBag.Error))
{
    <div class="well">@ViewBag.Error</div>
}
else
{
    <table class="table table-hover table-condensed">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.login)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.name)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.login)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td>
                        <i>@Html.ActionLink("Zobacz osiągnięcia", "Details", new { id = item.userId })</i>&nbsp;&nbsp;
                        @Html.ActionLink(" ", "DeleteFriendship", "Friendship", new { id = item.userId }, new { @class = "glyphicon glyphicon glyphicon-remove-circle btn btn-danger", @title="Usuń" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
