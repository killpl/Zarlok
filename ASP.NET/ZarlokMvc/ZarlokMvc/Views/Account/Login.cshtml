@model ZarlokMvc.Models.LoginModel

@{
    ViewBag.Title = "Logowanie";
}

<h2>Logowanie</h2>
<div class="float-left" style="width:60%">
@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl })) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <fieldset>
        <table><tr>
            <td><div class="editor-label">
                @Html.LabelFor(m => m.Login)</div></td>
            <td><div class="editor-field">
                @Html.TextBoxFor(m => m.Login)
                @Html.ValidationMessageFor(m => m.Login)</div></td></tr>
            <tr>
            <td><div class="editor-label">
                @Html.LabelFor(m => m.Password)</div></td>
            <td><div class="editor-field">
                @Html.PasswordFor(m => m.Password)
                @Html.ValidationMessageFor(m => m.Password)</td>
        </tr></table>
            <br />
            <p><input type="submit" value="Zaloguj" class="btn btn-info" />
            </p>
        </fieldset>
    <h3>
        Nie posiadasz konta? @Html.ActionLink("Zarejestruj się!", "Register")
    </h3>
}</div>
<div class="float-right" style="width:40%"><img src="~/Images/ciastko.png" style="width: 75%; height: 75%"/></div>