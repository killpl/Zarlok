@model ZarlokMvc.ViewModels.CategoryViewModel

@{
    ViewBag.Title = "Edytuj kategorię";
}

<h2>Edytuj kategorię</h2>
<br />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.id)
         <fieldset>
            <table><tr><td>
                <div class="editor-label">@Html.LabelFor(model => model.name) </div>
            </td>
             <td>
                <div class="editor-field">
                    @Html.EditorFor(model => model.name)
                    @Html.ValidationMessageFor(model => model.name)
                </div>
            </td></tr></table>
            <br />
            <p><input type="submit" value="Zapisz" class="btn btn-info" /> 
                 @Html.ActionLink("Powrót", "Index") <span class="glyphicon glyphicon-share-alt"></span></p>
        </fieldset>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}