@model IEnumerable<ZarlokMvc.Models.Category>

@{
    ViewBag.Title = "Kategorie jedzenia";
}

<h2>Kategorie jedzenia</h2>
@if (User.Identity.IsAuthenticated)
{
    if (User.IsInRole("admin"))
    {
        <p>
            <h4>@Html.ActionLink("Dodaj nową kategorię", "CreateCategory")</h4>
        </p>
    }
}
<br />
@if(!String.IsNullOrEmpty(ViewBag.Error))
{
    <div class="well">@ViewBag.Error</div>
}
else
{
    <table class="table table-hover table-condensed">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.ActionLink(" ", "EditCategory", "Category", new { id = item.id }, new { @class = "glyphicon glyphicon glyphicon-edit btn btn-primary", @title="Edytuj kategorię" }) 
                @Html.ActionLink(" ", "DeleteCategory", "Category", new { id = item.id }, new { @class = "glyphicon glyphicon glyphicon-remove-circle btn btn-danger", @title="Usuń kategorię" })

           </td>
        </tr>
    }
    </tbody>
</table>
}

